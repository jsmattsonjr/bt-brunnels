{
  "manifest_version": 3,
  "name": "Biketerra Brunnels",
  "version": "0.1.0",
  "description": "Automatically detect and apply bridges/tunnels from OpenStreetMap to Biketerra routes",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://biketerra.com/*",
    "https://overpass-api.de/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://biketerra.com/routes/new*"],
      "js": ["js/turf-csp.js", "js/content.js"],
      "css": ["css/content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["js/turf-csp.js"],
      "matches": ["https://biketerra.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
